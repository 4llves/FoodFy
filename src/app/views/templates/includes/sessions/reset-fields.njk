<div class="item">
    <div>Email</div>
    <div>
        <input
            type="email"
            name="email"
            placeholder="Digite seu email"
            required
            value="{{user.email}}"
            onblur="Validate.apply(this, 'isEmail')"
        >
    </div>
</div>

<div class="item">
    <div>Nova senha</div>
    <div>
        <input
            type="password"
            name="password"
            placeholder="Digite sua nova senha"
            required
        >
    </div>
</div>

<div class="item">
    <div>Repetir senha</div>
    <div>
        <input
            type="password"
            name="password_repeat"
            placeholder="Repita a nova senha"
            required
        >
    </div>
</div>

<input type="hidden" name="token" value="{{token}}">